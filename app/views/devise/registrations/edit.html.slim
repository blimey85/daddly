scss:
  label {
      margin-bottom: 0;
  }

  p.form-text.text-muted {
      text-align: left;
      font-weight: 300;
      color: #999 !important;
      margin-top: 0;
  }

  h5 {
      line-height: 55px;
  }

  .btn .fa {
      margin-top: 0;
  }

  $services: facebook twitter google;
  $colors: #3b5998 #55ACEE #dd4b39;
  $hover-colors: #2d4373 #2795e9 #c23321;

  @each $service in $services {
      $i: index($services, $service);

      .btn-outline-#{$service} {
          border: 2px solid nth($colors, $i) !important;
          color: nth($colors, $i) !important;
          background-color: #ffffff !important;

          &:hover {
              border: 2px solid nth($colors, $i) !important;
              color: #ffffff !important;
              background-color: nth($colors, $i) !important;
          }

          > :first-child {
              color: #ffffff !important;
              background-color: nth($colors, $i);
          }
      }

      .btn-#{$service} {
          color: #fff;
          background-color: nth($colors, $i);
          border: 2px solid nth($colors, $i);

          &:focus {
              color: #fff;
              background-color: nth($hover-colors, $i);
              border-color: nth($hover-colors, $i);
          }

          &:hover {
              color: #fff;
              background-color: nth($hover-colors, $i);
              border-color: nth($hover-colors, $i);
          }
      }
  }

  .btn {
      border-radius: 4px !important;
      display: inline-block !important;
      padding: 7px 12px !important;
      margin-bottom: 0 !important;
      font-size: 14px !important;
      font-weight: normal !important;
      vertical-align: middle !important;
      text-transform: none;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .btn-social {
      position: relative !important;
      padding-left: 44px !important;
      text-align: left !important;
      white-space: nowrap !important;
      overflow: hidden !important;
      text-overflow: ellipsis !important;

      > :first-child {
          position: absolute;
          left: 0;
          top: 0;
          bottom: 0;
          width: 32px;
          line-height: 31px;
          font-size: 1.6em;
          text-align: center;
          border-right: 1px solid rgba(0, 0, 0, 0.2)
      }
  }
