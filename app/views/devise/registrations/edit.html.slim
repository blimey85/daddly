.col-md-12
  .card
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f|
      .card-body
        h2.feature-title.text-center.mb-4.mt-2.font-bold
          strong Edit Account
        hr
        .mt-4
          = f.error_notification
          .form-group
            = f.input :email, class: 'form-control'

          .form-group
            = f.input :password, class: 'form-control'
            = f.hint "leave it blank if you don't want to change it"

          .form-group
            = f.input :password_confirmation, class: 'form-control'

          .form-group
            = f.input :current_password, class: 'form-control'
            = f.hint 'we need your current password to confirm your changes'

          .text-center
            = f.button :submit, 'Update Account', class: 'btn-rounded mt-2 mb-3'

        hr
        .container.col-md-3
          .row
            .col
              .row.mb-2
                - if current_user.services.facebook.any?
                  = link_to current_user.services.facebook.last, method: :delete, class: 'btn btn-block btn-social btn-facebook'
                    i.fa.fa-facebook
                    | Connected to Facebook
                - else
                  = link_to user_facebook_omniauth_authorize_path, class: 'btn btn-block btn-social btn-outline-facebook'
                    i.fa.fa-facebook
                    | Connect to Facebook

          .row
            .col
              .row.mb-2
                - if current_user.services.twitter.any?
                  = link_to current_user.services.twitter.last, method: :delete, class: 'btn btn-block btn-social btn-twitter'
                    i.fa.fa-facebook
                    | Connected to Twitter
                - else
                  = link_to user_twitter_omniauth_authorize_path, class: 'btn btn-block btn-social btn-outline-twitter'
                    i.fa.fa-twitter
                    | Connect to Twitter

          .row
            .col
              .row.mb-2
                - if current_user.services.google_oauth2.any?
                  = link_to current_user.services.google_oauth2.last, method: :delete, class: 'btn btn-block btn-social btn-google'
                    i.fa.fa-google
                    | Connected to Google
                - else
                  = link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-block btn-social btn-outline-google'
                    i.fa.fa-google
                    | Connect to Google

