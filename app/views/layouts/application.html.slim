    //     FontAwesome.dom.i2svg();
    // });

css:
  .intro-2 {
      background: url("http://mdbootstrap.com/img/Photos/Others/forest1.jpg")no-repeat center center;
      background-size: cover;
  }

  .card {
      background-color: rgba(255, 255, 255, 0.85);
  }

  .md-form .prefix {
      font-size: 1.5rem;
      margin-top: 1rem;
  }

  h6 {
      line-height: 1.7;
  }

  @media (max-width: 450px) and (max-height: 750px) {
      .full-height,
      .full-height body,
      .full-height header,
      .full-height header .view {
          height: 1400px;
      }
  }

  @media (min-width: 451px) and (max-width: 767px) and (max-height: 1023px) {
      .full-height,
      .full-height body,
      .full-height header,
      .full-height header .view {
          height: 1200px;
      }
  }

  @media (min-width: 800px) and (max-width: 1025px) {
      .full-height,
      .full-height body,
      .full-height header,
      .full-height header .view {
          height: 900px;
      }
  }

  @media (min-width: 1026px) and (max-height: 800px) {
      .full-height,
      .full-height body,
      .full-height header,
      .full-height header .view {
          height: 800px;
      }
  }
